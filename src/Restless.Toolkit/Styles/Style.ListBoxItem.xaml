<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:keys="clr-namespace:Restless.Toolkit.Resource">

    <!-- Resource dictionary for default styles only -->
    <!-- These do not have a corresponding custom control -->

    <Style x:Key="{x:Static keys:ResourceKeys.DefaultListBoxItemStyleKey}" TargetType="ListBoxItem">
        <Setter Property="Padding" Value="{DynamicResource {x:Static keys:ResourceKeys.ListBoxItemPaddingKey}}"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

</ResourceDictionary>